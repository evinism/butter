import Person from "./person.sur"

struct Slot:
  people: List<Person>
  startTime: integer
  endTime: integer

struct AddToPartyResponse:
  success: boolean
  time: optional Slot

rpc AddToParty:
  request: Person
  response: AddToPartyResponse

struct ChatMessage:
  time: integer
  content: string

struct ChatUpdate:
  time: integer
  content: string
  author: Person

channel Chat:
  incoming: ChatMessage
  outgoing: ChatUpdate
